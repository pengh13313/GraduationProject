<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/login_title_bar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="1dp"
            android:paddingRight="5dp"
            android:src="@drawable/common_login_back" />

    </LinearLayout>
    <!--登录 icon-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <!--账号密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="46dp"
        android:orientation="vertical">
        <!--账号-->
        <RelativeLayout
            android:id="@+id/view_phone_num"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_login_account"
                style="@style/login_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:hint="请输入账号"
                android:drawableBottom="@drawable/edit_line"
                android:textColor="#333333"
                android:textColorHint="#d0d0d0"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/login_clean_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/delete_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <!--密码-->
        <RelativeLayout
            android:id="@+id/view_passwd"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp">

            <EditText
                android:id="@+id/et_login_password"
                style="@style/login_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableBottom="@drawable/edit_line"
                android:hint="请输入密码"
                android:inputType="phone"
                android:textColor="#333333"
                android:textColorHint="#d0d0d0"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/password_clean_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/delete_icon"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
    <!--登录按钮-->
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_login"
        android:enabled="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="#e8e8e8" />
    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_login"
        android:enabled="true"
        android:gravity="center"
        android:text="注册"
        android:textColor="#e8e8e8" />

</LinearLayout>