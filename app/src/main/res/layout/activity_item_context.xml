<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/login_title_bar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_createvisit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="1dp"
            android:paddingRight="5dp"
            android:src="@drawable/common_login_back" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="27dp"
            android:paddingLeft="24dp"
            android:paddingBottom="7dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/activity_createvisit_shopname_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/create_visit_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:text="任务主题:"
                    android:textSize="12sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/activity_createvisit_tasktitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/create_visit_shopname"
                    android:background="@color/white"
                    android:text="请输入任务主题"
                    android:imeOptions="actionSearch"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_createvisit_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:background="@color/color_bottom_layout_bg"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/activity_createvisit_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="24dp"
                android:background="@color/color_bottom_layout_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="任务内容"
                    android:textSize="12sp"
                    android:textColor="#333333"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                android:gravity="center"

                >

                <EditText
                    android:id="@+id/activity_createvisit_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="4dp"
                    android:maxLength="500"
                    android:focusableInTouchMode="true"
                    android:gravity="top|left"
                    android:hint="请输入您的任务内容具体，最多50字。"
                    android:textColorHint="#cccccc"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@color/white"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="24dp"
                android:background="@color/color_bottom_layout_bg">
                <TextView
                    android:id="@+id/need_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预计完成耗时：0小时0分钟"
                    android:textSize="12sp"
                    android:textColor="#333333"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/activity_createvisit_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:id="@+id/activity_createvisit_init"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/btn_submit"
                    android:layout_marginRight="24dp"
                    android:text="初始化"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/activity_createvisit_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:background="@drawable/btn_submit"
                    android:text="立即提交"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>