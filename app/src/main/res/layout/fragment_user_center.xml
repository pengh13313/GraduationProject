<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:overScrollMode="always"
    android:scrollbars="none"
    tools:context=".View.UserCenterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/title_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/holo_blue_bright" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal|bottom"
                >

                <com.example.a11708.graduationproject.View.roundImage.RoundedImageView
                    android:id="@+id/iv_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/header_default"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="5dp"
                    app:riv_oval="true" />
            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:text="登录" />


        <RelativeLayout
            android:id="@+id/settings_rest_item"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:text="休息提醒"
                android:textColor="#444444"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/clock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/setting_icon_right_arrow"
                android:textColor="#666666"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/settings_login_item"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:text="我想注销"
                android:textColor="#444444"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/arror_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/setting_icon_right_arrow"
                android:textColor="#444444"
                android:textSize="16sp" />
        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/settings_clear_item"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:text="清除缓存"
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#444444"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/setting_icon_right_arrow" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/settings_Excel_item"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:text="导出excel"
                android:textColor="#444444"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/setting_icon_right_arrow" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>